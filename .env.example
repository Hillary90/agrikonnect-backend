# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=generate-with-python-secrets-module

# Database Configuration
# PostgreSQL: postgresql://username:password@host:port/database_name
# SQLite: sqlite:///agrikonnect.db
DATABASE_URL=postgresql://user:password@localhost:5432/agrikonnect_db
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/agrikonnect_test

# JWT Configuration
JWT_SECRET_KEY=generate-with-python-secrets-module
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:5001


MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@agrikonnect.com

# Password Reset
PASSWORD_RESET_EXPIRES=3600

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173